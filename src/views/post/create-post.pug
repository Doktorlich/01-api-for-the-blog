extends ../includes/head-inc

block styles
	link(rel="stylesheet", href="/css/post.css")
	link(rel="stylesheet", href="/css/post-form.css")
	link(rel="stylesheet", href="/css/validation-error.css")

block title
	title Test
block content
	include ../error/validation-error
	main.content
		hr
		h1.content__title-h1 Create post
		form.form(action="/post/create-post", method="POST")
			label.label(for="input-title" ) Title post
				input#input-title(type="text", name="title" value=(oldInput && oldInput.title !== null? oldInput.title: ""))
				+validationError("title", "title")
			label.label(for="input-content" ) Content post
				textarea#input-content(name="content", cols="30", rows="10") #{oldInput && oldInput.content !== null? oldInput.content: ""}
				+validationError("content", "content")
			button.button-submit(type="submit") Create post



