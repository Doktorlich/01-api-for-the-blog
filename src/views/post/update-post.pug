extends ../includes/head-inc

block styles
	link(rel="stylesheet", href="/css/post.css")
	link(rel="stylesheet", href="/css/post-form.css")

block title
	title Test
block content
	main.content
		hr
		h1.content__title-h1 Create post
		form.form(action=("/post/"+paramId+"/update"), method="POST")
			label.label(for="input-title" ) Title post
				input#input-title(type="text", name="title", value=title)
			label.label(for="input-content" ) Content post
				textarea#input-content(name="content", cols="30", rows="10") #{content}
			button.button-submit(type="submit") Update post



