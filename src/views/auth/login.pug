extends ../includes/head-inc

block styles
	link(rel="stylesheet", href="/css/auth-form.css")
	link(rel="stylesheet", href="/css/validation-error.css")
block title
	title #{docTitle}
block content
	h1.content__title-h1 Login
	form.auth(action="/login", method="POST", novalidate)
		include ../error/validation-error
		.auth__container
			label.auth__label(for="input__login-mail") Email
			input.auth__input#input__login-mail(type="email", name="email" value=(oldInput && oldInput.email !== null ? oldInput.email : ""))
			+validationError("email", "auth","email")

			label.auth__label(for="input__login-password") Password
			input.auth__input#input__login-password(type="password", name="password")
			+validationError("password", "auth")

			button.auth__button-submit(type="submit") Log in